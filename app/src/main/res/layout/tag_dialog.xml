<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagInput"
            android:hint="@string/Tag"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_tags_title"
            android:text="@string/current_tags"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_tags_txtview"
            android:text="@string/no_current_tags"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_tags_chipgroup"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_groups"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chip_grp">

        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:text="@string/cancel"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/addTagBtn"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:text="@string/addTagBtn"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
